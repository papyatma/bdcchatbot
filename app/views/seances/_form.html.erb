      <ul>
      <% seance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :public %>
    <%= form.text_field :public, id: :seance_public %>
  </div>

  <div class="field">
    <%= form.label :ageMin %>
    <%= form.number_field :ageMin, id: :seance_ageMin %>
