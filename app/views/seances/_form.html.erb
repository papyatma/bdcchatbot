  <div class="field">
    <%= form.label :ageMax %>
    <%= form.number_field :ageMax, id: :seance_ageMax %>
  </div>

  <div class="field">
    <%= form.label :niveau %>
    <%= form.text_field :niveau, id: :seance_niveau %>
  </div>

  <div class="field">
    <%= form.label :sexe %>
    <%= form.number_field :sexe, id: :seance_sexe %>
  </div>

  <div class="field">
    <%= form.label :periode %>
    <%= form.text_field :periode, id: :seance_periode %>
  </div>

  <div class="field">
    <%= form.label :jour %>
    <%= form.text_field :jour, id: :seance_jour %>
  </div>

  <div class="field">
    <%= form.label :heureDebut %>
    <%= form.time_select :heureDebut, id: :seance_heureDebut %>
  </div>

  <div class="field">
    <%= form.label :heureFin %>
    <%= form.time_select :heureFin, id: :seance_heureFin %>
