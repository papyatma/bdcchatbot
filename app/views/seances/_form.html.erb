  <div class="field">
    <%= form.label :Activite %>
    <%= form.select :activite_id, Activite.all.collect { |a| [ a.nom, a.id ] }, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :Structure %>
    <%= form.select :structure_id, Structure.all.collect { |s| [ s.name, s.id ] }, include_blank: false %>
