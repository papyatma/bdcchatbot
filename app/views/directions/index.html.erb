<p id="notice"><%= notice %></p>

<h1>Directions</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Typeoffer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directions.each do |direction| %>
      <tr>
        <td><%= direction.name %></td>
        <td><%= direction.typeOffer %></td>
        <td><%= link_to 'Show', direction, class:"badge badge-primary" %></td>
        <td><%= link_to 'Edit', edit_direction_path(direction), class:"badge badge-primary" %></td>
        <td><%= link_to 'Destroy', direction, method: :delete, data: { confirm: 'Are you sure?' }, class:"badge badge-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Direction', new_direction_path,class:"badge badge-primary" %>
