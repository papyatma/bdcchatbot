<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= link_to 'Show', place, class:"badge badge-primary" %></td>
        <td><%= link_to 'Edit', edit_place_path(place), class:"badge badge-primary" %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }, class:"badge badge-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_place_path, class:"badge badge-primary" %>
