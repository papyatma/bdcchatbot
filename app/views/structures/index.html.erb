<p id="notice"><%= notice %></p>

<h1>Structures</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Type</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @structures.each do |structure| %>
      <tr>
        <td><%= structure.name %></td>
        <td><%= structure.address %></td>
        <td><%= structure.zipcode %></td>
        <td><%= structure.phone %></td>
        <td><%= structure.email %></td>
        <td><%= structure.typeStructure %></td>
        <td><%= structure.direction.name %></td>
        <td><%= link_to 'Show', structure, class:"badge badge-primary" %></td>
        <td><%= link_to 'Edit', edit_structure_path(structure), class:"badge badge-primary" %></td>
        <td><%= link_to 'Destroy', structure, method: :delete, data: { confirm: 'Are you sure?' },class:"badge badge-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Structure', new_structure_path, class:"badge badge-primary" %>
